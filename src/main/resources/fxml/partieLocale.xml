<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      styleClass="conteneurPrincipal" 
      fx:controller="Vitesse_javafx.vues.VuePartieLocaleFX"
      VBox.vgrow="ALWAYS">

    <Text fx:id="texteTmpPartieLocale" text="%jeu"/>
    <Pane VBox.vgrow="ALWAYS"/>
    <HBox alignment="center">
    	<Button fx:id="jouerCarte1" text="%carte1"/>
    	<Button fx:id="jouerCarte2" text="%carte2"/>
    	<Button fx:id="jouerCarte3" text="%carte3"/>
    	<Button fx:id="jouerCarte4" text="%carte4"/>
    	<Button fx:id="jouerCarte5" text="%carte5"/>
    </HBox>
    <Pane VBox.vgrow="ALWAYS"/>
    <HBox alignment="center">
    	<Text text="%nbCartesRes"/>
    	<Text fx:id="texteNombreCoups"/>
	</HBox>

    <Pane VBox.vgrow="ALWAYS"/>

    <Button fx:id="boutonRetour" text="%Retour"/>

</VBox>
